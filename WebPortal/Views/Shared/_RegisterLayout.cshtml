<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebPortal</title>
    <link href="~/css/style-starter.css" rel="stylesheet" />
    <!-- Include necessary stylesheets for registration form -->
</head>
<body>
    <!-- Simplified header (if needed) -->
    <header>
        <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet" />

    </header>

    <!-- Registration form -->
    <div class="container py-lg-5">
        <div class="content-info-in row justify-content-center">
            <div class="col-md-8">
                @RenderBody() <!-- Render the registration form content -->
            </div>
        </div>
    </div>

    <!-- Include necessary scripts -->
    <script src="~/js/jquery-3.3.1.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Include necessary scripts for registration form -->
</body>
</html>
